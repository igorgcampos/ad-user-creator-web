# =============================================================================
# Backend Environment Variables
# =============================================================================
# 
# Este arquivo contém APENAS variáveis específicas do backend
# 
# Para usar:
# 1. Copie este arquivo para backend/.env 
# 2. Configure as variáveis do Active Directory
# 3. Ajuste as configurações conforme seu ambiente
#
# =============================================================================

# =============================================================================
# Configurações do Servidor Backend
# =============================================================================

# Ambiente e porta
NODE_ENV=production
PORT=8000

# Segurança e autenticação
SECRET_KEY=your-secret-key-here-change-in-production
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8082,http://your-domain.com

# =============================================================================
# Active Directory Configuration
# =============================================================================

# Conexão LDAP
AD_SERVER=ldap://your-ad-server.com:389
AD_DOMAIN=your-domain.local
AD_BASE_DN=DC=your-domain,DC=local

# Credenciais do serviço
AD_USERNAME=your-service-account
AD_PASSWORD=your-service-password
AD_USE_SSL=false

# Configurações organizacionais
AD_USERS_OU=OU=Users,DC=your-domain,DC=local
AD_TIMEOUT=10000

# =============================================================================
# Configurações de Aplicação
# =============================================================================

# Sistema de logs
LOG_LEVEL=info

# Rate limiting para APIs
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Política de senhas
MIN_PASSWORD_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true 